function Draw1D( ER, E, H, dz )

   za=[0:length(E)-1]*dz;
   
   values = unique(ER);
   
   basecolor = [1 1 1];

   xstart = dz;
   xend = dz*15; 
   
   fill(0,0,'-w');   hold on;
   i = 1;
   count = 0;
   prev = 0;
   while i < length(ER)
    i = i + 1;
    
    if(prev == 1)
      prev = ER(i);
      continue;
    end
    
    if(prev == ER(i))
      count = count + 1;
      
    else
      xstart = (i-count)*dz;
      xend = xstart + count*dz;
      
      x = [ xstart xend xend xstart xstart ];
      y = [ -1.5 -1.5 1.5 1.5 -1.5 ];
      fill(x,y,[1 1 1]./ER(i-1));
      
      
      count = 1;
      prev = ER(i);
    end
  
   end

   plot(za, E, '-b'); 
   plot(za, H, '-r'); 
   
   hold off;

end

